{
  "name": "acorn",
  "version": "5.0.2-alpha",
  "description": "Open source peer-to-peer project management for software teams",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc && electron-builder build",
    "tsc": "tsc",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": {
    "name": "Connor Turland",
    "email": "connor@sprillow.com"
  },
  "license": "CAL-1.0",
  "build": {
    "productName": "Acorn",
    "afterSign": "./afterSignHook.js",
    "appId": "org.lightningrodlabs.acorn",
    "copyright": "Â© 2020-2022 Harris-Braun Enterprises, LLC",
    "asarUnpack": [
      "binaries/**/*",
      "web/**/*"
    ],
    "files": [
      "dist/**/*",
      "web/**/*",
      "binaries/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "artifactName": "${productName}.${version}.${platform}-${arch}.${ext}"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico",
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "directories": {
      "output": "out"
    }
  },
  "devDependencies": {
    "@types/node": "14.10.1",
    "@types/split": "^1.0.0",
    "electron": "^20.1.3",
    "electron-builder": "^23.3.3",
    "eslint": "^7.25.0",
    "eslint-plugin-import": "^2.22.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@lightningrodlabs/electron-holochain": "=0.7.3",
    "electron-context-menu": "^3.5.0",
    "electron-log": "^4.3.5",
    "electron-notarize": "^1.0.0",
    "split": "^1.0.1"
  }
}
