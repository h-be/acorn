{
  "name": "acorn",
  "version": "9.8.1-alpha",
  "description": "Open source peer-to-peer project management for software teams",
  "main": "dist/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build",
    "tsc": "tsc",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": {
    "name": "Connor Turland",
    "email": "connor@sprillow.com"
  },
  "license": "CAL-1.0",
  "build": {
    "productName": "Acorn",
    "afterSign": "./afterSignHook.js",
    "appId": "org.lightningrodlabs.acorn",
    "copyright": "Â© 2020-2023 Harris-Braun Enterprises, LLC",
    "asarUnpack": [
      "binaries/**/*",
      "web/**/*"
    ],
    "files": [
      "dist/**/*",
      "web/**/*",
      "binaries/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "artifactName": "${productName}.${version}.${platform}-${arch}.${ext}"
    },
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico",
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "directories": {
      "output": "out"
    }
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@types/node": "20.8.9",
    "@types/split": "^1.0.0",
    "electron": "20.3.12",
    "electron-builder": "24.8.0",
    "eslint": "^7.25.0",
    "eslint-plugin-import": "^2.22.1"
  },
  "dependencies": {
    "@lightningrodlabs/electron-holochain": "=0.7.13",
    "electron-context-menu": "^3.5.0",
    "electron-default-menu": "^1.0.2",
    "electron-log": "^4.3.5",
    "split": "^1.0.1"
  }
}
